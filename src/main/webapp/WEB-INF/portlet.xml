<?xml version="1.0" encoding="UTF-8"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd"
	version="1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd
                        http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd">

	<portlet>
		<portlet-name>NitecoEmployeePortlet</portlet-name>
		<display-name>Niteco Portlet using Spring MVC</display-name>
		<portlet-class>org.springframework.web.portlet.DispatcherPortlet</portlet-class>

		<init-param>
			<name>contextConfigLocation</name>
			<value>/WEB-INF/niteco-portlet.xml</value>
		</init-param>

		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>VIEW</portlet-mode>
			<portlet-mode>CONFIG</portlet-mode>
		</supports>

		<portlet-info>
			<title>Niteco Employees</title>
			<short-title>Portlet Niteco Employees</short-title>
			<keywords></keywords>
		</portlet-info>

		<portlet-preferences>
			<preference>
				<name>text</name>
				<value></value>
			</preference>
		</portlet-preferences>
	</portlet>

	<custom-portlet-mode>
		<portlet-mode>config</portlet-mode>
	</custom-portlet-mode>

</portlet-app>
